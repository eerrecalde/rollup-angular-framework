{
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": [
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module"
	},
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "import/no-unresolved": 1,
    "global-require": 0,
    "prefer-template": 1,
    "max-len": [
      "error",
      120
    ],
    "new-cap": 0,
    "react/prefer-stateless-function": 0,
    "no-param-reassign": 1,
    "no-nested-ternary": 1,
    "import/no-extraneous-dependencies": 0,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ]
  }
}
